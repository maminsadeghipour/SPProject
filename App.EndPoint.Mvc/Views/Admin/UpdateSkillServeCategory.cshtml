@using App.Domain.Core.SkillServeAgg.DTOs
@model UpdateSkillServeCategoryDto;

@{
    Layout = "_AdminLayout";
}


<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            ویرایش دسته‌بندی
        </h4>
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">دسته‌بندی</h5>
                        <small class="text-muted float-end">ویرایش</small>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Admin" asp-action="UpdateSkillServeCategory">
                            <div hidden class="mb-3">
                                <label readonly class="form-label" asp-for="Id"></label>
                                <input readonly class="form-control" asp-for="Id"/>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="Title">عنوان</label>
                                <input class="form-control" asp-for="Title" placeholder="دسته‌بندی" type="text" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="Description">توضیحات</label>
                                <textarea class="form-control" asp-for="Description" placeholder="توضیحات دسته‌بندی را وارد کنید"></textarea>
                            </div>
                            <button class="btn btn-primary" type="submit">تایید</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

